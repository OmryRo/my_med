<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.medicine.MedicineEditorActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/medicine_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="icon content "
            android:src="@drawable/ic_tablets_solid"
            android:tint="@color/colorPrimary" />

        <EditText
            android:id="@+id/et_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Ritalin Bla 30g"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"
             />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <EditText
            android:id="@+id/et_medicine_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes, like should take it with food or not..."
            android:text="Should take after eating, before going to bad."
            android:textColor="@color/colorTextTextDark"
            android:textSize="18sp" />
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout1"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_title_reminder_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Times:"
                android:textAlignment="textStart"
                android:textSize="@dimen/title_size" />

            <ImageView
                android:id="@+id/ib_add_time_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_title_reminder_times"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                android:src="@drawable/ic_add_box_black_24dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_of_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/tv_title_repeats_every"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPEATS EVERY"
            android:textSize="@dimen/title_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_times_of_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="2"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/divider3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_repeats_every" />

            <Spinner
                android:id="@+id/repeats_unit_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/et_times_of_repeat"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_repeats_every" />

        </LinearLayout>
        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <TextView
            android:id="@+id/tv_title_repeats_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REPEATS ON"
            android:textSize="@dimen/title_size" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_sunday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_custom"
                android:onClick="onDayButtonClicked"
                android:text="@string/sunday"
                app:layout_constraintEnd_toStartOf="@+id/bt_monday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bt_monday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:onClick="onDayButtonClicked"
                android:background="@drawable/button_custom"
                android:text="@string/monday"
                app:layout_constraintBaseline_toBaselineOf="@+id/bt_sunday"
                app:layout_constraintEnd_toStartOf="@+id/bt_tuesday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bt_sunday" />

            <Button
                android:id="@+id/bt_thursday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:onClick="onDayButtonClicked"
                android:background="@drawable/button_custom"
                android:text="@string/thursday"
                app:layout_constraintBaseline_toBaselineOf="@+id/bt_wednesday"
                app:layout_constraintEnd_toStartOf="@+id/bt_friday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bt_wednesday" />

            <Button
                android:id="@+id/bt_wednesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:onClick="onDayButtonClicked"
                android:background="@drawable/button_custom"
                android:text="@string/wednesday"
                app:layout_constraintBaseline_toBaselineOf="@+id/bt_tuesday"
                app:layout_constraintEnd_toStartOf="@+id/bt_thursday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bt_tuesday" />

            <Button
                android:id="@+id/bt_tuesday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:onClick="onDayButtonClicked"
                android:background="@drawable/button_custom"
                android:text="@string/tuesday"
                app:layout_constraintBaseline_toBaselineOf="@+id/bt_monday"
                app:layout_constraintEnd_toStartOf="@+id/bt_wednesday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bt_monday" />

            <Button
                android:id="@+id/bt_friday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:onClick="onDayButtonClicked"
                android:background="@drawable/button_custom"
                android:text="@string/friday"
                app:layout_constraintBaseline_toBaselineOf="@+id/bt_thursday"
                app:layout_constraintEnd_toStartOf="@+id/bt_saturday"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bt_thursday" />

            <Button
                android:id="@+id/bt_saturday"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:onClick="onDayButtonClicked"
                android:background="@drawable/button_custom"
                android:text="@string/saturday"
                app:layout_constraintBaseline_toBaselineOf="@+id/bt_friday"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bt_friday" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/tv_title_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End"
            android:textSize="@dimen/title_size" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_never"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked" />

                <TextView
                    android:id="@+id/tv_never"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="never"
                    android:textSize="@dimen/title_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_occurrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked" />

                <TextView
                    android:id="@+id/tv_title_after"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="after" />

                <EditText
                    android:id="@+id/et_number_occurrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:inputType="number"
                    android:text="2"
                    android:textSize="12sp" />



                <TextView
                    android:id="@+id/tv_title_end_occurrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="occurrence" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked" />

                <TextView
                    android:id="@+id/tv_date_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="01/09/2019" />
            </LinearLayout>


        </RadioGroup>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>